{
  "name": "aegis-redact-backend",
  "version": "1.0.0",
  "description": "Backend API for AegisRedact - Authentication and Cloud Storage",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:migrate": "node --loader tsx src/db/migrate.ts",
    "db:seed": "node --loader tsx src/db/seed.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "express-rate-limit": "^7.1.5",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "nanoid": "^5.0.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "@types/node": "^20.10.6",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5"
  }
}
