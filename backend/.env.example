# Server Configuration
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aegis_redact

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=change-this-to-a-random-secret
JWT_REFRESH_SECRET=change-this-to-a-different-random-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# Storage Configuration
STORAGE_PROVIDER=local
# For local development (files stored in backend/uploads)
UPLOAD_DIR=./uploads

# For S3/R2 (uncomment and configure when deploying)
# STORAGE_PROVIDER=s3
# S3_BUCKET=aegis-redact-files
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-key
# S3_SECRET_ACCESS_KEY=your-secret
# S3_ENDPOINT=https://s3.us-east-1.amazonaws.com

# Storage Quotas
DEFAULT_STORAGE_QUOTA_BYTES=104857600

# Email Configuration (optional, for password reset)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# FROM_EMAIL=noreply@aegisredact.com
